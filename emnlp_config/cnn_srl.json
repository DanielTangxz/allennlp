{
  "dataset_reader":{
    "type":"srl",
    "token_indexers":{
      "elmo": {
        "type": "elmo_characters"
      }
    }
  },
  "train_data_path": "/net/efs/aristo/allennlp/srl_lm/conll-formatted-ontonotes-5.0-12/conll-formatted-ontonotes-5.0/data/train/",
  "validation_data_path": "/net/efs/aristo/allennlp/srl_lm/conll-formatted-ontonotes-5.0-12/conll-formatted-ontonotes-5.0/data/development/",
  "test_data_path": "/net/efs/aristo/allennlp/srl_lm/conll-formatted-ontonotes-5.0-12/conll-formatted-ontonotes-5.0/data/test/",
  "model": {
    "type": "srl",
    "text_field_embedder": {
      "elmo": {
        "type": "gated_cnn_token_embedder",
        "dropout": 0.1,
        "weight_file": "/net/efs/aristo/allennlp/elmo_models/calypso_cnn_16x_4_kernel_restart_10models/model_state_epoch_1.2018-05-07-13-50-14.th",
        "options_file": "/net/efs/aristo/allennlp/elmo_models/calypso_cnn_16x_4_kernel_restart_10models/options.json"
      }
    },
    "initializer": [
      [
        "tag_projection_layer.*weight",
        {
          "type": "orthogonal"
        }
      ]
    ],
    "regularizer": [
      [
        ".*scalar_parameters.*",
        {
          "type": "l2",
          "alpha": 0.001
        }
      ]
    ],
    "encoder": {
      "type": "alternating_highway_lstm_cuda",
      "input_size": 1124,
      "hidden_size": 300,
      "num_layers": 8,
      "recurrent_dropout_probability": 0.1
    },
    "binary_feature_dim": 100
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["tokens", "num_tokens"]],
    "batch_size" : 80
  },

  "trainer": {
    "num_epochs": 500,
    "grad_clipping": 1.0,
    "patience": 200,
    "num_serialized_models_to_keep": 10,
    "validation_metric": "+f1-measure-overall",
    "cuda_device": 0,
    "optimizer": {
      "type": "adadelta",
      "rho": 0.95
    }
  },
  "vocabulary": {
        "directory_path": "/net/efs/aristo/allennlp/srl_lm/all_inclusive_vocab/vocabulary/"
  }
}
